<Window x:Class="GomokuCV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Go Stone Recognition" Height="100" Width="200">
    <Grid>
        <Image Name="ImageControl" MouseDown="ImageControl_MouseDown"
               MouseMove="ImageControl_MouseMove" MouseUp="ImageControl_MouseUp"/>
